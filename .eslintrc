{
  "parser": "babel-eslint",
  "env": {
    "jest": true, // describe, test, it ..
    "browser": true, // console ..
    "es6": true // Promise ..
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended"
  ],
  "plugins": ["react-hooks"],
  "rules": {
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn", // Checks effect dependencies
    "prefer-const": "warn",
    "no-console": "warn"
  }
}
